<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <View
        android:id="@+id/view_line"
        android:layout_width="3dp"
        android:layout_height="20dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="0dp"
        android:background="#35babc"
        android:textSize="18dp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintLeft_toRightOf="@+id/textView_plus"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_line2"
        android:layout_width="3dp"
        android:layout_height="20dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="27dp"
        android:background="#35babc"
        android:textSize="18dp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintLeft_toRightOf="@+id/textView_plus"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_spot"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="0dp"
        android:gravity="left|center_vertical"
        android:text="Sidney"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textView_dot"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/textView_plus"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:gravity="right|center_vertical"
        android:text="10/23"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="#35babc"
        android:text="●"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textView_plus"
        android:layout_marginLeft="8dp" />

    <ImageButton
        android:id="@+id/imageButton_cancle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/camera"
        app:layout_constraintLeft_toRightOf="@+id/textView_spot"
        android:layout_marginLeft="8dp" />

</android.support.constraint.ConstraintLayout>